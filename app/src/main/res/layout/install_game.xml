<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Your existing layout content -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gameImageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="9">

                    <TextView
                        android:id="@+id/gameNameTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/geist_semi_bold"
                        android:gravity="bottom"
                        android:text="Title"
                        android:textSize="@dimen/h4" />

                    <TextView
                        android:id="@+id/gameCategoriesTextView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="@font/geist_regular"
                        android:gravity="center_vertical"
                        android:text="Categories"
                        android:textSize="@dimen/p" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ratingTextView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:fontFamily="@font/geist_regular"
                            android:gravity="top"
                            android:text="5.2"
                            android:textSize="@dimen/p" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/h5"
                            android:layout_height="@dimen/h5"
                            android:layout_marginStart="3dp"
                            android:layout_weight="3"
                            app:srcCompat="@drawable/star_solid" />

                        <TextView
                            android:id="@+id/downloadsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="3"
                            android:text="45+" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/h5"
                            android:layout_height="@dimen/h5"
                            android:layout_marginStart="3dp"
                            android:layout_weight="3"
                            app:srcCompat="@drawable/download_solid" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/installButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/install" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/carouselRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description" />

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/progressBarContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        tools:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>
</LinearLayout>